@model HomeTesting.Models.FeedbackModel


<div class="col-md-12">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
            <i class="fa fa-comments-o"></i><h3 class="box-title">Feedback</h3>
            <br />
            <h4 style="color:black; padding-left:0px">Send Feedback to the I.T Development Team</h4>
            <h5 style="color:black">Please use this to provide feedback/suggestions, not to report software faults!, Thank You.</h5>
            <br />
            <br />

            @using (Html.BeginForm("Feedback", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <strong style="color:black">@Html.Label("Your Name (Optional):")</strong>

                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Your name", @style = "width:200px;" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    <strong style="color:black">@Html.Label("Feedback:")</strong>
                    <br />

                    @Html.TextAreaFor(model => model.Feedback, 10, 45, new { id = "test", @placeholder = "Please enter your comments", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "text-danger" })

                </div>
                @Html.HiddenFor(model => model.UserID)
                <br />

                <input type="submit" value="Send Feedback" id="feedbacksend" class="btn btn-info pull-left" style="margin-left:10px;" />
            }
            <br />
            <div style="color:white; font-size:large">

                <br />
                <br />

            </div>

        </div>
    </div>
</div>
